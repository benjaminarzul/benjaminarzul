<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity ReponseStagiaire.
    -->
    <changeSet id="20150113142001" author="jhipster">
        <createTable tableName="T_REPONSESTAGIAIRE">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="resultat_id" type="bigint"/>
            <column name="question_id" type="bigint"/>
            <column name="reponse_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="resultat_id"
                                 baseTableName="T_REPONSESTAGIAIRE"
                                 constraintName="fk_reponsestagiaire_resultat_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_RESULTAT"/>

        <addForeignKeyConstraint baseColumnNames="question_id"
                                 baseTableName="T_REPONSESTAGIAIRE"
                                 constraintName="fk_reponsestagiaire_question_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_QUESTION"/>

        <addForeignKeyConstraint baseColumnNames="reponse_id"
                                 baseTableName="T_REPONSESTAGIAIRE"
                                 constraintName="fk_reponsestagiaire_reponse_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_REPONSE"/>

    </changeSet>
</databaseChangeLog>
