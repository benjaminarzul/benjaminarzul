<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Reponse.
    -->
    <changeSet id="20150112162913" author="jhipster">
        <createTable tableName="T_REPONSE">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="libelle" type="varchar(255)"/>
            <column name="explication" type="varchar(255)"/>
            <column name="question_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="question_id"
                                 baseTableName="T_REPONSE"
                                 constraintName="fk_reponse_question_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_QUESTION"/>

    </changeSet>
</databaseChangeLog>
